@page
@using GymTrackersAPI.Entities
@model Gym_Tracker.Pages.GymLocationModel


<h2>Locations Found</h2>

<form method="get">
    <i class="fa-solid fa-location-arrow"></i>
    <input type="search" id="GymName" name="GymName" class="form-control" value="Search For a Gym" />

    <input type="submit" id="submitBtn" value="Search" class="btn btn-primary" />
</form>


<div id="results" class="mt-4">
</div>


<script type="module">
    addLocationFormListen()
</script>

@if (Model.Locationlist != null && Model.Locationlist.Any())

{
    <ul>
        @foreach (var location in Model.Locationlist)

        {
            <li class="result-item">@location.GymName - @location.OpenTime - @location.CloseTime</li>
        }
    </ul>
}

else

{
    <div id="results-container">
        <p class="result-placeholder">Enter a gym name to begin your search</p>
    </div>
}
