@page
@model Gym_Tracker.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Course.Cid" />
            <div class="form-group">
                <label asp-for="Course.CourseName" class="control-label"></label>
                <input asp-for="Course.CourseName" class="form-control" />
                <span asp-validation-for="Course.CourseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.LengthMinutes" class="control-label"></label>
                <input asp-for="Course.LengthMinutes" class="form-control" />
                <span asp-validation-for="Course.LengthMinutes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.TrainerFirstName" class="control-label"></label>
                <input asp-for="Course.TrainerFirstName" class="form-control" />
                <span asp-validation-for="Course.TrainerFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.TrainerLastName" class="control-label"></label>
                <input asp-for="Course.TrainerLastName" class="form-control" />
                <span asp-validation-for="Course.TrainerLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.ClassPrice" class="control-label"></label>
                <input asp-for="Course.ClassPrice" class="form-control" />
                <span asp-validation-for="Course.ClassPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
